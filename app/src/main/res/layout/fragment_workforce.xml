<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDepTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department:"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvDepTag"
        android:layout_alignBottom="@+id/tvDepTag"
        android:id="@+id/spDepartment"/>

    <TextView
        android:id="@+id/tvDateTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/spDepartment"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btDate"
        android:layout_width="wrap_content"
        android:layout_height="38dip"
        android:layout_weight="1"
        android:text=""
        android:layout_toRightOf="@+id/tvDateTag"
        android:layout_alignTop="@+id/tvDateTag"
        style="@android:style/Widget.DeviceDefault.Spinner"/>

    <TableLayout
        android:id="@+id/tbWorkforce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvDateTag"></TableLayout>


</RelativeLayout>
